<% include ../partials/header %>
<div class='container'>
    <div class='row'>
        <div class='col-md-offset-2 col-md-8'>
            <div class="panel panel-default">
                  <div class="panel-body">
                      <form  action='/registerlocal' method='post'>
                        <h2 class='text-center'>Register with us</h2>
                        <div class='row'>
                            <div class='col-md-offset-2 col-md-8'>
                                <div class='col-md-6 text-center'>
                                    <label id='studentRadio'>
                                        <img src='https://dl.dropboxusercontent.com/u/8980599/Pandit_hosting/student.png' class='img-responsive center-block' width=100px;>
                                        <br><input type='radio'  name='type' value='student' checked> I'm a Student.
                                    </label>
                                </div>
                                <div class='col-md-6 text-center'>
                                    <label id='tutorRadio'>
                                        <img src='https://dl.dropboxusercontent.com/u/8980599/Pandit_hosting/scientist.png' class='img-responsive center-block' width=100px;>
                                        <br><input type='radio'  name='type' value='tutor' > I'm a Tutor.
                                    </label>
                                </div>
                            </div>
                        </div>
                        <br>
                        <div class='row'>
                            <div class='col-md-offset-3 col-md-6 text-center'>
                                <a href='/auth/facebook' class='btn btn-facebook'>
                                    <i class="fa fa-facebook-official" aria-hidden="true"></i>
                                    <span>Register with Facebook</span>
                                </a>
                            </div>
                        </div>
                        <div class='row'>
                            <div class='col-md-offset-2 col-md-8'>
                                <br>
                                <table class='table'>
                                    <tr>
                                        <td>Email:</td>
                                        <td><input type='email' class='form-control' placeholder='Your Email Address' name='email' required></td>
                                    </tr>
                                    <tr>
                                        <td>Password:</td>
                                        <td><input type='password' class='form-control' placeholder='Your Password' name='password' required></td>
                                    </tr>
                                    <tr>
                                        <td>Tel:</td>
                                        <td><input type='text' class='form-control' placeholder='Your Telephone Number' name='tel'></td>
                                    </tr>
                                    <tr>
                                        <td>Fullname:</td>
                                        <td>
                                                <input type='text' class='form-control' placeholder='Firstname - Surname' name='fullname' required>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Age:</td>
                                        <td>
                                            <input type='number' class='form-control' placeholder='Your Age' name='age' required>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Gender: </td>
                                        <td>
                                            <select class='form-control' name='gender'>
                                                <option value='male' checked>Male</option>
                                                <option value='female'>Female</option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>
                                <hr>
                                <table class='table hide' id='tutorField'>
                                    <tr>
                                        <td>
                                            Graduated from:
                                        </td>
                                        <td>
                                            <input type='text' class='form-control' name='graduate'>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            Introduce yourself:
                                            <textarea rows='4' name='introduce' class='form-control'></textarea>
                                        </td>
                                    </tr>
                                </table>
                                <div class='text-center'>
                                    <button type='submit' class='btn btn-primary'>Submit</button> <button type='reset' class='btn btn-default'>Clear</button>
                                </div>
                            </div>
                        </div>
                      </form>
                  </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var tutorRadio = $('#tutorRadio');
    var studentRadio = $('#studentRadio');
    
    tutorRadio.click(function(){
        $('#tutorField').removeClass('hide');
    })
    
    studentRadio.click(function(){
        $('#tutorField').addClass('hide');
    })
    
</script>
<% include ../partials/footer %>